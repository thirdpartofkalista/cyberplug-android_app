<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ConfigureDevice">

    <android.support.v7.widget.Toolbar
        android:id="@+id/configure_device_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:layout_marginBottom="512dp"
        android:background="?attr/colorPrimary"
        android:elevation="4dp"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        android:layout_alignParentTop="true"
        tools:layout_editor_absoluteX="0dp" >
        <!--<TextView-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:text="Configure device"-->
            <!--android:textSize="27dp"-->
            <!--android:textStyle="bold"/>-->
    </android.support.v7.widget.Toolbar>

    <TextView
        android:id="@+id/wifi_name_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="29dp"
        android:layout_marginTop="115dp"
        android:text="Wi-Fi name"
        android:textSize="21sp"/>

    <EditText
        android:id="@+id/wifi_name_edittext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@id/wifi_name_textview"
        android:layout_below="@id/wifi_name_textview"
        android:ems="10"
        android:hint="Enter the name..."
        android:inputType="textPersonName" />

    <TextView
        android:id="@+id/password_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="215dp"
        android:layout_marginStart="29dp"
        android:text="Wi-Fi password"
        android:textSize="21sp"
        />

    <EditText
        android:id="@+id/password_editview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@id/password_textview"
        android:layout_below="@id/password_textview"
        android:ems="10"
        android:hint="Enter the password..."
        android:inputType="textPersonName" />

    <TextView
        android:id="@+id/device_name_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="315dp"
        android:layout_marginStart="29dp"
        android:text="Device name"
        android:textSize="21sp"/>

    <EditText
        android:id="@+id/device_name_edittext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@id/device_name_textview"
        android:layout_below="@id/device_name_textview"
        android:ems="10"
        android:hint="Enter a device name..."
        android:inputType="textPersonName" />

    <Button
        android:id="@+id/save_button"
        android:layout_width="130dp"
        android:layout_height="65dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="69dp"
        android:text="save"
        android:textSize="21dp"
        android:background="@drawable/buton"
        android:textColor="@android:color/white"/>

</RelativeLayout>