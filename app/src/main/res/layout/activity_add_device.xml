<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddDeviceActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/add_device_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:layout_marginBottom="512dp"
        android:background="?attr/colorPrimary"
        android:elevation="4dp"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        android:layout_alignParentTop="true"
        tools:layout_editor_absoluteX="0dp" >
        <!--<TextView-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:text="Add a  new device"-->
            <!--android:textSize="27dp"-->
            <!--android:textStyle="bold"/>-->
    </android.support.v7.widget.Toolbar>

    <fragment android:name="com.criss.cyberplug.types.fragments.DeviceApCredsFragment"
        android:id="@+id/fragment_device_ap_creds"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <fragment android:name="com.criss.cyberplug.types.fragments.DeviceConfigurationFragment"
        android:id="@+id/fragment_device_configure"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</RelativeLayout>