<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CreateAccountActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/create_account_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        android:theme="@style/Smartplug.ActionBar"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="0dp" />

    <TextView
        android:id="@+id/for_email_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="29dp"
        android:layout_marginTop="168dp"
        android:text="What's your e-mail?"
        android:textSize="21sp" />

    <EditText
        android:id="@+id/for_email_edittext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/for_email_textview"
        android:layout_marginTop="203dp"
        android:ems="10"
        android:hint="Enter your e-mail..."
        android:inputType="textEmailAddress" />

    <TextView
        android:id="@+id/for_password_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/for_email_textview"
        android:layout_marginBottom="247dp"
        android:text="Create a password"
        android:textSize="21sp" />

    <EditText
        android:id="@+id/for_password_edittext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/for_email_textview"
        android:layout_marginBottom="195dp"
        android:ems="10"
        android:hint="Enter a password..."
        android:inputType="textPassword" />

    <Button
        android:id="@+id/create_button"
        android:layout_width="130dp"
        android:layout_height="65dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="69dp"
        android:text="create"
        android:textSize="21sp"
        android:background="@drawable/buton"
        android:textColor="@android:color/white"
        />
</RelativeLayout>